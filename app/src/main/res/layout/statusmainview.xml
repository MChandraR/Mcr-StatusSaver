<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/MainActivityParentView"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="3dp"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/StatusMainViewStatusArea"
        android:background="@drawable/statusviewcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <ImageView
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:background="@color/black"
            android:id="@+id/imageView"
            android:layout_width="135dp"
            android:layout_height="135dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="File name"
            android:textColor="@color/black"
            android:id="@+id/FileName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView">
        <ImageButton
            android:foregroundTint="@color/white"
            android:background="@color/dark_opacity_50"
            android:id="@+id/SaveBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_save_alt_24"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:shadowColor="@color/black"
            android:shadowRadius="3"
            android:shadowDy="2"
            android:shadowDx="2"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:id="@+id/StatusMainViewTipeFile"
            android:textSize="11sp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>